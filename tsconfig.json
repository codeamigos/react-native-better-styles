{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-native",
    "outDir": "./lib",
    "rootDir": "src",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
